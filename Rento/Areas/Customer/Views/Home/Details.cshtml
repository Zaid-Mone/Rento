@model Rento.Models.Car

@{
    ViewData["Title"] = "Edit";
}

<h1>Car Details</h1>

<hr />
<div class="row">
    <div class="col-md-6">

        <form asp-action="Edit" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="ImageUrl" />
            <input type="hidden" asp-for="Name" />
            <input type="hidden" asp-for="Color" />
            <input type="hidden" asp-for="Model" />
            <input type="hidden" asp-for="PricePerDay" />
            <input type="hidden" asp-for="Year" />
            <input type="hidden" asp-for="CarType.Name" />

            <div class="row">
                <div class="form-group col-12 ">
                    <p class="text-center">Car Name : @Model.Name</p>
                </div>
            </div>
            <div class="row">
                <div class="form-group col-6">
                    <p>Car Color : @Model.Color</p>
                </div>
                <div class="form-group col-6">
                    <p>Car Year : @Model.Year</p>
                </div>
            </div>
            <div class="row">
                <div class="form-group col-6">
                    <p>Car Model : @Model.Model</p>
                </div>
                <div class="form-group col-6">
                    <p>Car Plate.NO : @Model.PlateNumber</p>
                </div>
            </div>
            <div class="row">
                <div class="form-group col-6">
                    <p>Car Price : @Model.PricePerDay.ToString("C")</p>
                </div>
                <div class="form-group col-6">
                    <p>Car Type : @Model.CarType.Name</p>
                </div>
            </div>

        </form>

    </div>
    <div class="col-md-6">
        <img src="~/Images/@Model.ImageUrl" style="width:320px;height:250px;" />

    </div>
</div>

<div class="form-group">
    
    <button type="submit" value="Add to Cart" class="btn btn-success form-control" style="margin:10px 0;">Add to Cart</button>
    <br />
    <a asp-area="Customer" asp-controller="Home" asp-action="Cars" asp-route-Id="@Model.CarType.Id" class="btn btn-outline-info w-100">Back to List</a>


</div>

