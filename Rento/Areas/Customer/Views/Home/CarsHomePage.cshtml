
@using X.PagedList.Web.Common;

@using X.PagedList.Mvc.Core;

@model X.PagedList.IPagedList<Car>
@{
    ViewData["Title"] = "CarsHomePage";
}

<h1>CarsHomePage</h1>




<section style="background-color: #eee;">
    <div class="container py-5">
        <div class="row justify-content-center mb-3">
            <div class="col-md-12 col-xl-10">
                <div class="card shadow-0 border rounded-3">
                    <div class="card-body">
                        <div class="row">
                            @if (ViewBag.message != null)
                            {
                                <div class="alert alert-warning">
                                    @ViewBag.message
                                </div>
                            }
                            @*<a asp-action="GetCars" asp-area="Customer" asp-controller="Home"> Get</a>*@
                            @foreach (var item in Model)
                            {


                                <div class="col-md-12 col-lg-3 col-xl-3 mb-4 mb-lg-0">
                                    <div class="bg-image hover-zoom ripple rounded ripple-surface">
                                        <img src="~/Images/@item.ImageUrl"
                                             class="w-100" />
                                        <a href="#!">
                                            <div class="hover-overlay">
                                                <div class="mask" style="background-color: rgba(253, 253, 253, 0.15);"></div>
                                            </div>
                                        </a>
                                    </div>
                                </div>
                                <div class="col-md-6 col-lg-6 col-xl-6">
                                    <h5>@item.Name</h5>
                                    @*<div class="d-flex flex-row">
                                            <div class="text-danger mb-1 me-2">
                                                <i class="fa fa-star"></i>
                                                <i class="fa fa-star"></i>
                                                <i class="fa fa-star"></i>
                                                <i class="fa fa-star"></i>
                                            </div>
                                            <span>310</span>
                                        </div>*@
                                    <div class="mt-1 mb-0 text-muted small">
                                        <span>@item.Year</span>
                                        <span class="text-primary"> • </span>
                                        <span>@item.Model</span>
                                        <span class="text-primary"> • </span>
                                        <span>@item.Color<br /></span>
                                    </div>
                                    <div class="mb-2 text-muted small">
                                        <span>@item.PlateNumber</span>
                                        <span class="text-primary"> • </span>
                                        <span>For men</span>
                                        <span class="text-primary"> • </span>
                                        <span>Casual<br /></span>
                                    </div>
                                    <p class="text-truncate mb-4 mb-md-0">
                                        There are many variations of passages of Lorem Ipsum available, but the
                                        majority have suffered alteration in some form, by injected humour, or
                                        randomised words which don't look even slightly believable.
                                    </p>
                                </div>
                                <div class="col-md-6 col-lg-3 col-xl-3 border-sm-start-none border-start">
                                    <div class="d-flex flex-row align-items-center mb-1">
                                        <h4 class="mb-1 me-1">@item.PricePerDay.ToString("C")</h4>
                                        @*<span class="text-danger"><s>$20.99</s></span>*@
                                    </div>
                                    @*<h6 class="text-success">Free shipping</h6>*@
                                    <div class="d-flex flex-column mt-4">
                                        <a asp-area="Customer" asp-controller="Home" asp-action="Details" asp-route-Id="@item.Id" class="btn btn-primary">More Details</a>
                                        <button class="btn btn-outline-primary btn-sm mt-2" type="button">
                                            Add to wishlist
                                        </button>
                                    </div>
                                    <br />
                                    <br />
                                    <hr class="dropdown-divider" />
                                </div>

                            }

                        </div>
                    </div>
                </div>

            </div>

            <div>


            </div>
        </div>
    </div>
</section>

<div>
    @*@Html.PagedListPager(Model, c => Href(contentPath: "~/Customer/Home/Index?page=" + c), PagedListRenderOptionsBase.PageNumbersOnly)*@
    @Html.PagedListPager(Model, c => Href(contentPath: "~/Customer/Home/CarsHomePage?page=" + c), PagedListRenderOptions.MinimalWithPageCountText) <!-- MinimalWithPageCountText or MinimalWithItemCountText -->
